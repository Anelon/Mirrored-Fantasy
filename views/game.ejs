<%- include('partials/header.ejs') %>
<link href="./css/game.css" rel="stylesheet">

<main>
    <div class="centerMessage ui" id="introMessage">
        <h2>Welcome to</h2>
        <h1>Mirrored Fantasy</h1>
        <br>
        <hr>
        <label for="name">Display Name</label>
        <input id="name" placeholder="Player">
        <p id="error">Loading</p>
        <br>
        <button id="ready" disabled>Ready</button>
    </div>
    <div class="centerMessage ui" id="endMessage" hidden>
        <h1>Mirrored Fantasy</h1>
        <br>
        <hr>
        <h2><span id="winLaneName"></span> has Won</h2>
        <button id="ready" disabled>Ready</button>
    </div>
    <div class="playerInfo ui">
        <div class="abilities" id="abilities">
            <div class="ability">
                <img src="./img/arrow.png" class="abilityIcon" id="basicAbilityImg">
                <p id="basicAbilityKey">M2</p>
                <p id="basicAbilityName">Arrow</p>
            </div>
            <div class="ability">
                <img src="./img/abilities/fireball/fireball.gif" class="abilityIcon" id="rangedAbilityImg">
                <p id="rangedAbilityKey">Q</p>
                <p id="rangedAbilityName">Fireball</p>
            </div>
            <div class="ability">
                <img src="./img/abilities/waterball/waterball64.gif" class="abilityIcon" id="terainAbilityImg">
                <p id="terainAbilityKey">E</p>
                <p id="terainAbilityName">Waterball</p>
            </div>
            <div class="ability">
                <img src="./img/abilities/seed/seed64.gif" class="abilityIcon" id="rotateAbilityName">
                <p id="rotateAbilityKey">F</p>
                <p id="rotateAbilityName">Plant Seed</p>
            </div>
        </div>
        <div class="healthInfo">
            <h3 class="healthValue"><span id="healthNum"></span> hp</h3>
            <progress class="healthBar" id="healthBar" max="100" value="100"></progress>
        </div>
    </div>
    <canvas class="game"></canvas>


    <!-- PreLoad Images -->

    <!-- Dragon Images -->
    <img src="./img/dragon/attack1-test.png" id="attack1" hidden>
    <img src="./img/dragon/attack2-test.png" id="attack2" hidden>
    <img src="./img/dragon/death-test.png" id="death" hidden>
    <img src="./img/dragon/idleBattle-test.png" id="idleBattle" hidden>
    <!-- Entity Images -->
    <img src="./img/player.png" id="player" hidden>
    <img src="./img/arrow.png" id="arrow" hidden>
    <img src="./img/abilities/fireball/fireball.png" id="fireball" hidden>
    <img src="./img/abilities/seed/seed64.png" id="seed" hidden>
    <img src="./img/abilities/waterball/waterball64.png" id="waterball" hidden>
    <!-- TileMaps Images -->
    <img src="./img/tileMaps/grassTiles.png" id="grassTiles" hidden>
    <img src="./img/tileMaps/snowTiles.png" id="snowTiles" hidden>
    <img src="./img/tileMaps/dirtPathTiles.png" id="dirtPathTiles" hidden>
    <img src="./img/tileMaps/waterTiles.png" id="waterTiles" hidden>
    <img src="./img/tileMaps/dungeonTiles.png" id="dungeonTiles" hidden>
    <!-- Decoration Images -->
    <img src="./img/pillarRed/redPillar.png" id="redPillar" hidden>
    <img src="./img/pillarRed/redPillarActive.png" id="redPillarActive" hidden>
    <img src="./img/pillarBlue/bluePillar.png" id="bluePillar" hidden>
    <img src="./img/pillarBlue/bluePillarActive.png" id="bluePillarActive" hidden>
    <img src="./img/pillarGreen/greenPillar.png" id="greenPillar" hidden>
    <img src="./img/pillarGreen/greenPillarActive.png" id="greenPillarActive" hidden>
</main>

<script src="js/clientJS/socket.io/socket.io.js"></script>
<script async type="module" src="js/clientJS/index.js"></script>

<%- include('partials/footer.ejs') %>